<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background" >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="45px" >

    <ImageView
        android:id="@+id/helpBookingActivity"
        android:layout_width="45px"
        android:layout_height="45px"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/help" />

    <TextView
        android:id="@+id/title_booking_activity"
        android:layout_width="wrap_content"
        android:layout_height="45px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/helpBookingActivity"
        android:background="#70FFFFFF"
        android:gravity="center"
        android:text="@string/title_booking_activity"
        android:textAlignment="center"
        android:textSize="20sp"
        android:typeface="monospace" />

</RelativeLayout>
    <TableLayout
        android:id="@+id/table_booking"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#4285f4"
        android:padding="5dp"
        android:shrinkColumns="*"
        android:stretchColumns="*" >
    </TableLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="58dp"
        android:layout_weight="0.49"
        android:scrollbars="vertical" >

        <TableLayout
            android:id="@+id/tableLayout_booking"
            android:layout_width="fill_parent"
            android:layout_height="270dp"
           android:background="#70FFFFFF"
            android:padding="5dp"
            android:shrinkColumns="*"
            android:stretchColumns="*" >
        </TableLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/btnBackBooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/arrow_back"
        />

</LinearLayout>