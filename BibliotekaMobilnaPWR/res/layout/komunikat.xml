<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="45px"
        android:layout_gravity="top" >

        <ImageView
            android:id="@+id/helpAlerty"
            android:layout_width="45px"
            android:layout_height="45px"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/help" />

        <TextView
            android:id="@+id/comm_title"
            android:layout_width="wrap_content"
            android:layout_height="45px"
            android:layout_alignParentLeft="true"
        	android:layout_alignParentTop="true"
       		android:layout_toLeftOf="@+id/helpAlerty"
            android:text="@string/comm_title"
            android:textColor="@color/black"                    
        	android:background="#70FFFFFF"
        	android:gravity="center"              
        	android:textSize="20sp"
       	 	android:typeface="monospace"
             />
    </RelativeLayout>

    <ListView
        android:id="@+id/comm_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/back_Komunikat"
        android:layout_below="@+id/relativeLayout1" >

    </ListView>
<ImageView
     android:id="@+id/back_Komunikat"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentBottom="true"
     android:layout_alignParentLeft="true"
     android:background="@drawable/arrow_back" />
</RelativeLayout>